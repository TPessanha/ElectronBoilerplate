{
  "name": "electron-boilerplate",
  "version": "0.1.1",
  "description": "Electron boilterplate",
  "main": "./dist/app.min.js",
  "author": {
    "name": "Tomas Pessanha",
    "url": "https://github.com/TPessanha"
  },
  "license": "MIT",
  "homepage": "https://www.google.pt",
  "repository": {
    "type": "git",
    "url": "https://github.com/TPessanha/ElectronBoilerplate"
  },
  "scripts": {
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.config.electron.js --progress --profile --colors",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.config.production.js --progress --profile --colors",
    "build": " npm run build:main && npm run build:renderer",
    "build:web": "cross-env NODE_ENV=production webpack --config webpack.config.production.web.js --progress --profile --colors",
    "start": "electron ./dist/app.min.js",
    "build-start": "npm run clean && cross-env NODE_ENV=production npm run build && electron ./dist/app.min.js",
    "clean": "npm run remove:dist && npm run remove:release",
    "remove:dist": "rimraf ./dist",
    "remove:release": "rimraf ./release",
    "dev": "npm run hot_server -- --start:hot",
    "hot_server": "cross-env NODE_ENV=development node --max_old_space_size=2096 server.js",
    "start:hot": "cross-env HOT=1 NODE_ENV=development electron ./src/main.development",
    "package": "npm run build && build --publish never",
    "package:win": "npm run build && build --win --x64",
    "package:linux": "npm run build && build --linux",
    "package:all": "npm run build && build -mwl",
    "test": "jest",
    "generate:dts": "sass-dts ./src",
    "lint:eslint": "eslint src/**/*.js*",
    "lint:tslint": "tslint -c tslint.json 'src/**/*.ts*'",
    "lint": "npm run lint:eslint && npm run lint:tslint"
  },
  "build": {
    "productName": "ElectronBoilerplate",
    "appId": "tp.ElectronBoilerplate",
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "mac": {
      "category": "utility"
    }
  },
  "devDependencies": {
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-hot-loader": "^4.1.0",
    "ajv": "^6.5.2",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.5",
    "electron-builder": "^20.20.4",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.4.1",
    "jest-junit": "^5.1.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "prettier": "^1.13.7",
    "react-hot-loader": "^4.3.3",
    "redux-devtools": "^3.4.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "sass-to-dts": "^0.2.2",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "redux": "^3.7.2"
  },
  "engines": {
    "node": "8.11.3"
  }
}
